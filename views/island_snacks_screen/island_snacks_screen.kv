#:kivy 1.10.0

<Island_Snacks_Screen>:
    name: '_island_snacks_screen_'
    BoxLayout:
        canvas.before:
            Color:
                rgba: rgba('#72B7CD')
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            size_hint_x: 1
            size_hint_y: 1
            rows: 6
            cols: 4
            
            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.add_to_item('chips', self)
                Image:
                    source: 'assets/buttons/Nacho_Cheese.png'
                    x: self.parent.x
                    y: self.parent.y

            Label:
                id: Nacho_Cheese_total
                text: 'Nacho Cheese Sold \n  --.-- '
                pos: self.pos
                size: self.size
                font_size: '10px'

            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.add_to_item('chips', self)
                Image:
                    source: 'assets/buttons/Cool_Ranch.png'
                    x: self.parent.x
                    y: self.parent.y

            Label:
                id: Cool_Ranch_total
                text: 'Cool Ranch sold \n  --.-- '
                pos: self.pos
                size: self.size
                font_size: '10px'

            Widget:

            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.add_to_item('chips', self)
                Image:
