#:kivy 1.10.0

<SnacksScreen>:
    name: '_snacks_screen_'

    BoxLayout:
        canvas.before:
            Color:
                rgba: rgba('#72B7CD')
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            size_hint_x: 1
            size_hint_y: 1
            rows: 7
            cols: 3
            ImageButton:
                on_press: app.root.DIR_screen_selected()
                Image:
                    source: 'assets/buttons/DIR.png'
                    x: self.parent.x
                    y: self.parent.y           
            
            Widget:

            Label:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                Image:
                    source: 'assets/buttons/Snack_truck.png'
                    x: self.parent.x
                    y: self.parent.y 

            ImageButton:
                on_press: app.root.candy_screen_selected()
                Image:
                    source: 'assets/buttons/CANDY.png'
                    x: self.parent.x
                    y: self.parent.y
                    size:self.parent.size
            
            ImageButton:
                on_press: app.root.chips_screen_selected()
                Image:
                    source: 'assets/buttons/CHIPS.png'
                    x: self.parent.x
                    y: self.parent.y
                    size:self.parent.size

            ImageButton:
                on_press: app.root.combos_screen_selected()
                Image:
                    source: 'assets/buttons/COMBOS.png'
                    x: self.parent.x
                    y: self.parent.y
                    size:self.parent.size
            
            ImageButton
                on_press: app.root.add_to_item('fruit cups', self)
                Image:
                    source: 'assets/buttons/FRUIT_CUP.png'
                    x: self.parent.x
                    y: self.parent.y
                    size:self.parent.size
            
            ImageButton:
                on_press: app.root.add_to_item('fruit snacks', self)
                Image:
                    source: 'assets/buttons/FRUIT SNACKS.png'
                    x: self.parent.x
                    y: self.parent.y
                    size:self.parent.size

            ImageButton:            
                on_press: app.root.island_snacks_screen_selected()
                Image:
                    source: 'assets/buttons/ISLAND SNACKS.png'
                    x: self.parent.x
                    y: self.parent.y
                    size:self.parent.size
            
            ImageButton:
                on_press: app.root.gatorade_bar_screen_selected()
                Image:
                    source: 'assets/buttons/GATORADE BAR.png'
                    x: self.parent.x
                    y: self.parent.y
                    size:self.parent.size
            
            ImageButton:
                on_press: app.root.add_to_item('gum', self)
                Image:
                    source: 'assets/buttons/GUM.png'
                    x: self.parent.x
                    y: self.parent.y
                    size:self.parent.size
            
            ImageButton:
                on_press: app.root.pastry_screen_selected()
                Image:
                    source: 'assets/buttons/PASTRY.png'
                    x: self.parent.x
                    y: self.parent.y
                    size:self.parent.size
            
            ImageButton:
                on_press: app.root.add_to_item('pop tarts' , self)
                Image:
                    source: 'assets/buttons/POP TARTS.png'
                    x: self.parent.x
                    y: self.parent.y
                    size:self.parent.size
            
            ImageButton:
                on_press: app.root.choose_SF_selected()
                Image:
                    source: 'assets/buttons/SF SEEDS.png'
                    x: self.parent.x
                    y: self.parent.y
                    size:self.parent.size

            ImageButton:
                on_press: app.root.add_to_item('soups', self)
                Image:
                    source: 'assets/buttons/SOUPS.png'
                    x: self.parent.x
                    y: self.parent.y
                    size:self.parent.size

            Widget:
            
            Label:
                id: running_total
                text: '$ --.-- '
                pos: self.pos
                size: self.size
                font_size: '30px'

            Widget:

            ImageButton:
                on_press: app.root.receipt_screen_selected()
                Image:
                    source: 'assets/buttons/receipt_button.png'
                    x: self.parent.x
                    y: self.parent.y

