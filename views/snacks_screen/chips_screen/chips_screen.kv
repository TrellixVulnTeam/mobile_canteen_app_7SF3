#:kivy 1.10.0

<Chips_Screen>:
    name: '_chips_screen_'
    BoxLayout:
        canvas.before:
            Color:
                rgba: rgba('#72B7CD')
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            size_hint_x: 1
            size_hint_y: 1
            rows: 6
            cols: 2
            
            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.add_to_item('chips', self)
                Image:
                    source: 'assets/buttons/Nacho_Cheese.png'
                    x: self.parent.x
                    y: self.parent.y

            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.add_to_item('chips', self)
                Image:
                    source: 'assets/buttons/Cool_Ranch.png'
                    x: self.parent.x
                    y: self.parent.y

            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.add_to_item('chips', self)
                Image:
                    source: 'assets/buttons/Classic.png'
                    x: self.parent.x
                    y: self.parent.y

            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.add_to_item('chips', self)
                Image:
                    source: 'assets/buttons/BBQ.png'
                    x: self.parent.x
                    y: self.parent.y

            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.add_to_item('chips', self)
                Image:
                    source: 'assets/buttons/Hot_Cheetos.png'
                    x: self.parent.x
                    y: self.parent.y

            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.add_to_item('el sabroso', self)
                Image:
                    source: 'assets/buttons/EL_SABROSO.png'
                    x: self.parent.x
                    y: self.parent.y

            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.add_to_item('takis', self)
                Image:
                    source: 'assets/buttons/TAKIS.png'
                    x: self.parent.x
                    y: self.parent.y

            
            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.add_to_item('chips', self)
                Image:
                    source: 'assets/buttons/Not_Listed.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.DIR_screen_selected()
                Image:
                    source: 'assets/buttons/DIR.png'
                    x: self.parent.x
                    y: self.parent.y

            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                Image:
                    source: 'assets/buttons/COMP.png'
                    x: self.parent.x
                    y: self.parent.y
            
            Label:
                id: Chips_comp_total
                text: 'Comp \n  --.-- '
                pos: self.pos
                size: self.size
                font_size: '10px'