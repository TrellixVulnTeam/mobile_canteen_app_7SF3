#:kivy 1.10.0

<FourthScreen>:
    name: '_fourth_screen_'
    BoxLayout:
        canvas.before:
            Color:
                rgba: rgba('#72B7CD')
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            size_hint_x: 1
            size_hint_y: 1
            rows: 7
            cols: 3
            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.drinks_screen_selected()
                Image:
                    source: 'assets/buttons/SNACKS.png'
                    x: self.parent.x
                    y: self.parent.y

            Widget:

            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.drinks_screen_selected()
                Image:
                    source: 'assets/buttons/DRINKS.png'
                    x: self.parent.x
                    y: self.parent.y
            
            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.drinks_screen_selected()
                Image:
                    source: 'assets/buttons/HOTFOOD-P.png'
                    x: self.parent.x
                    y: self.parent.y
                

            Label:
                id: running_total
                text: '$ --.-- '
                pos: self.pos
                size: self.size
                font_size: '50px'
            
            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.drinks_screen_selected()
                Image:
                    source: 'assets/buttons/RETAIL.png'
                    x: self.parent.x
                    y: self.parent.y
            
            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.add_to_total('breakfast')
                Image:
                    source: 'assets/buttons/BREAKFAST.png'
                    x: self.parent.x
                    y: self.parent.y
            
            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.add_to_total('small burrito')
                Image:
                    source: 'assets/buttons/SMALLBURRITO.png'
                    x: self.parent.x
                    y: self.parent.y
            
            Button:
                background_color: 1, 1, 1, .01
                size: self.size 
                pos: self.pos
                on_press: app.root.add_to_total('large burrito')
                Image:
                    source: 'assets/buttons/LARGEBURRITO.png'
                    x: self.parent.x
                    y: self.parent.y

            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.add_to_total('calzone')
                Image:
                    source: 'assets/buttons/CALZONE.png'
                    x: self.parent.x
                    y: self.parent.y
            
            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.add_to_total('big chicken')
                Image:
                    source: 'assets/buttons/BIGCHICKEN.png'
                    x: self.parent.x
                    y: self.parent.y
            
            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.add_to_total('pbj')
                Image:
                    source: 'assets/buttons/PB&J.png'
                    x: self.parent.x
                    y: self.parent.y
            
            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.add_to_total('BRATS')
                Image:
                    source: 'assets/buttons/BRATS.png'
                    x: self.parent.x
                    y: self.parent.y
            
            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.add_to_total('fresh & ready')
                Image:
                    source: 'assets/buttons/FRESH&READY.png'
                    x: self.parent.x
                    y: self.parent.y
            
            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.add_to_total('tuna')
                Image:
                    source: 'assets/buttons/TUNA.png'
                    x: self.parent.x
                    y: self.parent.y

            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.add_to_total('parfait')
                Image:
                    source: 'assets/buttons/PARFAIT.png'
                    x: self.parent.x
                    y: self.parent.y

            Widget:

            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.reset_running_total()
                Image:
                    source: 'assets/buttons/receipt_button.png'
                    x: self.parent.x
                    y: self.parent.y
            
            