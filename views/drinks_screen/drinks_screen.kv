                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('5 hour')
                Image:
                    source: 'assets/buttons/5HOUR.png'
                    x: self.parent.x
                    y: self.parent.y

            Widget:

            Widget:
            
            Label:
                id: running_total
                text: '$ --.-- '
                pos: self.pos
                size: self.size
                font_size: '30px'
            
            ImageButton:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.receipt_screen_selected()
                Image:
                    source: 'assets/buttons/receipt_button.png'
                    x: self.parent.x
                    y: self.parent.y
            
            