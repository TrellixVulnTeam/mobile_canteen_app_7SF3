#:kivy 1.10.0

<DrinksScreen>:
    name: '_drinks_screen_'
    BoxLayout:
        canvas.before:
            Color:
                rgba: rgba('#72B7CD')
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            size_hint_x: 1
            size_hint_y: 1
            rows: 9
            cols: 3
            ImageButton:
                on_press: app.root.DIR_screen_selected()
                Image:
                    source: 'assets/buttons/DIR.png'
                    x: self.parent.x
                    y: self.parent.y
                
            Label:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                Image:
                    source: 'assets/buttons/Drink_truck.png'
                    x: self.parent.x
                    y: self.parent.y
            
            Widget:
            
            ImageButton:
                on_press: app.root.add_to_item('arizona', self)
                Image:
                    source: 'assets/buttons/ARIZONA.png'
                    y: self.parent.y 
                    x: self.parent.x
                    size:self.parent.size

            
            ImageButton:
                on_press: app.root.add_to_item('bang', self)
