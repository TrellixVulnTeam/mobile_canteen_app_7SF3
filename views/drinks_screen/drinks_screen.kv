#:kivy 1.10.0

<DrinksScreen>:
    name: '_drinks_screen_'
    BoxLayout:
        canvas.before:
            Color:
                rgba: rgba('#72B7CD')
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            size_hint_x: 1
            size_hint_y: 1
            rows: 9
            cols: 3
            ImageButton:
                on_press: app.root.DIR_screen_selected()
                Image:
                    source: 'assets/buttons/DIR.png'
                    x: self.parent.x
                    y: self.parent.y
            Label:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                Image:
                    source: 'assets/buttons/Drink_truck.png'
                    x: self.parent.x
                    y: self.parent.y
            
            Widget:
            
            ImageButton:
                on_press: app.root.add_to_item('nesquick')
                Image:
                    source: 'assets/buttons/NESQUICK.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('gatorade')
                Image:
                    source: 'assets/buttons/GATORADE.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('red bull')
                Image:
                    source: 'assets/buttons/REDBULL.png'
                    x: self.parent.x
                    y: self.parent.y

            ImageButton:
                on_press: app.root.add_to_item('monster')
                Image:
                    source: 'assets/buttons/MONSTER.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('brisk')
                Image:
                    source: 'assets/buttons/BRISK.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('water')
                Image:
                    source: 'assets/buttons/WATER.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('soda')
                Image:
                    source: 'assets/buttons/SODA.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('arizona')
                Image:
                    source: 'assets/buttons/ARIZONA.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('v8')
                Image:
                    source: 'assets/buttons/V8.png'
                    x: self.parent.x
                    y: self.parent.y

            ImageButton:
                on_press: app.root.add_to_item('langers')
                Image:
                    source: 'assets/buttons/LANGERS.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('body armor')
                Image:
                    source: 'assets/buttons/BODYARMOR.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('star bucks')
                Image:
                    source: 'assets/buttons/STARBUCKS.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('raze')
                Image:
                    source: 'assets/buttons/RAZE.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('bang')
                Image:
                    source: 'assets/buttons/BANG.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('electro life')
                Image:
                    source: 'assets/buttons/ELECTROLIFE.png'
                    x: self.parent.x
                    y: self.parent.y

            ImageButton:
                on_press: app.root.add_to_item('coconut water')
                Image:
