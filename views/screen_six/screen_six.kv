#:kivy 1.10.0

<SixthScreen>:
    name: '_sixth_screen_'
    BoxLayout:
        canvas.before:
            Color:
                rgba: rgba('#72B7CD')
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            size_hint_x: 1
            size_hint_y: 1
            rows: 7
            cols: 3
            
            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.get_data()
                on_press: app.root.DIR_screen_selected() 
                on_release: app.root.trigger_send_email()
                Image:
                    source: 'assets/buttons/ORDER.png'
                    x: self.parent.x
                    y: self.parent.y

            Button:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                on_press: app.root.DIR_screen_selected()
                Image:
                    source: 'assets/buttons/DIR.png'
                    x: self.parent.x
                    y: self.parent.y   

            Label:
                id: running_total
                text: '$ --.-- '
                pos: self.pos
                size: self.size
                font_size: '30px'
