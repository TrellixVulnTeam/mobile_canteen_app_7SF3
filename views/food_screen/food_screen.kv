#:kivy 1.10.0

<FoodScreen>:
    name: '_food_screen_'
    BoxLayout:
        canvas.before:
            Color:
                rgba: rgba('#72B7CD')
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            size_hint_x: 1
            size_hint_y: 1
            rows: 7
            cols: 3
        
            ImageButton:
                on_press: app.root.DIR_screen_selected()
                Image:
                    source: 'assets/buttons/DIR.png'
                    x: self.parent.x
                    y: self.parent.y
            Label:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                Image:
                    source: 'assets/buttons/Hot_food_truck.png'
                    x: self.parent.x
                    y: self.parent.y
            
            Widget:
            
            ImageButton:
                on_press: app.root.add_to_item('breakfast')
                Image:
                    source: 'assets/buttons/BREAKFAST.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('small burrito')
                Image:
                    source: 'assets/buttons/SMALLBURRITO.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('large burrito')
                Image:
                    source: 'assets/buttons/LARGEBURRITO.png'
                    x: self.parent.x
                    y: self.parent.y

            ImageButton:
                on_press: app.root.add_to_item('calzone')
                Image:
                    source: 'assets/buttons/CALZONE.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('big chicken')
                Image:
                    source: 'assets/buttons/BIGCHICKEN.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('pbj')
                Image:
                    source: 'assets/buttons/PB&J.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('brats')
                Image:
                    source: 'assets/buttons/BRATS.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('fresh & ready')
                Image:
                    source: 'assets/buttons/FRESH&READY.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('tuna')
                Image:
                    source: 'assets/buttons/TUNA.png'
                    x: self.parent.x
                    y: self.parent.y

            ImageButton:
                on_press: app.root.add_to_item('parfait')
                Image:
                    source: 'assets/buttons/PARFAIT.png'
                    x: self.parent.x
                    y: self.parent.y
            
            Label:
                id: running_total
                text: '$ --.-- '
                pos: self.pos
                size: self.size
                font_size: '30px'

            ImageButton:
                on_press: app.root.receipt_screen_selected()
                Image:
                    source: 'assets/buttons/receipt_button.png'
                    x: self.parent.x
                    y: self.parent.y
            
            