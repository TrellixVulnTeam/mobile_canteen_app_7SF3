#:kivy 1.10.0

<RetailScreen>:
    name: '_retail_screen_'
    BoxLayout:
        canvas.before:
            Color:
                rgba: rgba('#72B7CD')
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            size_hint_x: 1
            size_hint_y: 1
            rows: 7
            cols: 3
            ImageButton:
                on_press: app.root.DIR_screen_selected()
                Image:
                    source: 'assets/buttons/DIR.png'
                    x: self.parent.x
                    y: self.parent.y
            
            Label:
                background_color: 1, 1, 1, .01
                size: self.size
                pos: self.pos
                Image:
                    source: 'assets/buttons/Retail_truck.png'
                    x: self.parent.x
                    y: self.parent.y
            
            Widget:
            
            ImageButton:
                on_press: app.root.add_to_item('ciggs')
                Image:
                    source: 'assets/buttons/CIGGS.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('grizzly')
                Image:
                    source: 'assets/buttons/GRIZZLY.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('lighters')
                Image:
                    source: 'assets/buttons/LIGHTER.png'
                    x: self.parent.x
                    y: self.parent.y

            ImageButton:
                on_press: app.root.add_to_item('stokers')
                Image:
                    source: 'assets/buttons/STOKERS.png'
                    x: self.parent.x
                    y: self.parent.y
            
            ImageButton:
                on_press: app.root.add_to_item('chapstick')
                Image:
                    source: 'assets/buttons/CHAPSTICK.png'
                    x: self.parent.x
                    y: self.parent.y

            Widget:

            Widget:
            
            Label:
                id: running_total
                text: '$ --.-- '
                pos: self.pos
                size: self.size
                font_size: '30px'
            
            ImageButton:
                on_press: app.root.receipt_screen_selected()
                Image:
                    source: 'assets/buttons/receipt_button.png'
                    x: self.parent.x
                    y: self.parent.y
            
            